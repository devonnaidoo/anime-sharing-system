<% include partials/header %>

<div class="container">
    <form method="post" action="/users/dashboard/profile/edit/<%= userInfo._id %>" enctype="multipart/form-data"
        class="p-5">
        <div class="form-group">
            <label for="name">Name</label>
            <input name="name" value="<%= userInfo.name %>" type="text" class="form-control"
                placeholder="Enter first name here">
        </div>
        <div class="form-group">
            <label for="username">Enter a username</label>
            <input name="username" value="<%= userInfo.username %>" type="text" class="form-control"
                placeholder="Enter username here">
        </div>

        <div class="form-group">
            <label for="email">Email address</label>
            <input name="email" value="<%= userInfo.email %>" type="email" class="form-control"
                placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="profileImage">Add a profile image</label>
            <input name="profileImage" type="file" class="form-control-file">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>