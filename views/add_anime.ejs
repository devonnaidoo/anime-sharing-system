<% include partials/header %>


<div class="container p-5">
    <form method="post" action="/users/dashboard/add/<%= userInfo._id %>" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Title</label>
            <input name="title" type="text" class="form-control" placeholder="Enter anime title">
        </div>
        <div class="form-group">
            <label for="genre">Genre</label>
            <input name="genre" type="text" class="form-control" placeholder="Enter anime genre">
        </div>
        <div class="form-group">
            <label for="source">Source</label>
            <input name="source" type="text" class="form-control" placeholder="Enter anime source">
        </div>
        <div class="form-group">
            <label for="animeImage">Add a anime image</label>
            <input name="animeImage" type="file" class="form-control-file">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>