<% include partials/header %>

<div class="container">
    <form method="post" action="/users/register" enctype="multipart/form-data" class="p-5">
        <div class="form-group">
            <label for="name">Name</label>
            <input name="name" type="text" class="form-control" placeholder="Enter first name here">
        </div>
        <div class="form-group">
            <label for="username">Enter a username</label>
            <input name="username" type="text" class="form-control" placeholder="Enter username here">
        </div>

        <div class="form-group">
            <label for="email">Email address</label>
            <input name="email" type="email" class="form-control" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input name="password" type="password" class="form-control" id="exampleInputPassword1"
                placeholder="Enter Password">
        </div>
        <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input name="password2" type="password" class="form-control" placeholder="Repeat password here">
        </div>
        <div class="form-group">
            <label for="profileImage">Add a profile image</label>
            <input name="profileImage" type="file" class="form-control-file">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>